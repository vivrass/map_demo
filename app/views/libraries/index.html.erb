<div class="row-fluid">
  <div class="span12">
    <h1>All the Libraries</h1>
  </div>
</div>

<div class="row-fluid">
  <div class="span5">
    <div class="row-fluid">
      <div class="span12">
        <%= form_tag libraries_path, :method => "get" do %>
          <p>
            <%= text_field_tag :search, params[:search], :placeholder => "Search" %>
            <%= submit_tag "Search", :name => nil, :class => "btn btn-primary" %>
          </p>
        <% end %>
      </div>
    </div>
    <div class="row-fluid">
      <div class="span12">
        <% @libraries.each do |library| %>
          <div class="library">
            <h5><%= library.name %></h5>
            <span class="address"><%= library.address %></span>
            <span><%= link_to '', edit_library_path(library), :class => "icon-pencil"%></span>
            <span><%= link_to '', library, method: :delete, data: { confirm: 'Are you sure?' }, :class => "icon-remove" %></span>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="span7">
    <%= gmaps(
      "markers" => {"data" => @libraries_markers},
      "map_options" => { "type" => "HYBRID", "zoom" => 5},
    ) %>
  </div>
</div>

<%= link_to new_library_path do %>
  <span class="btn btn-primary">Add Library</span>
<% end %>
